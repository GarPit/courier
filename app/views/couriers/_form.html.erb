<%= form_for @runner, :remote => true, :html => { :class => "form-horizontal runner" } do |f| %>

    <% if @runner.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@runner.errors.count, "error") %> prohibited this runner from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @runner.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= bootstrap_text_field(f, :first_name) %>
  <%= bootstrap_text_field(f, :last_name) %>
  <%= bootstrap_text_field(f, :email) %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            runners_path, :class => 'btn btn-default' %>

<% end %>
