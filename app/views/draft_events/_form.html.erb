<%= form_for @draft_event, :html => { :class => "form-horizontal draft_event" } do |f| %>

    <% if @draft_event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@draft_event.errors.count, "error") %> prohibited this draft_event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @draft_event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :destination_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :destination_id, Destination.all, :id, :name, {}, :class => 'form-control' %>
    </div>
    <%= error_span(@draft_event[:destination_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :due_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_field :due_date, :class => 'form-control' %>
    </div>
    <%= error_span(@draft_event[:due_date]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            draft_events_path, :class => 'btn btn-default' %>

<% end %>
