<%= form_for @destination, :html => { :class => "form-horizontal destination" } do |f| %>

    <% if @destination.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @destination.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= bootstrap_text_field(f, :name) %>
  <%= bootstrap_text_field(f, :address) %>
  <%= bootstrap_text_field(f, :subway_station) %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            destinations_path, :class => 'btn btn-default' %>

<% end %>
