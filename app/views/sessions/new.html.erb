<%= form_tag sessions_path, class: "form-horizontal" do %>
  <div class="control-group">
    <%= label_tag "Email" %>
    <div class="controls">
      <%= text_field_tag "email", nil, class: "form-control" %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag "Password" %>
    <div class="controls">
      <%= password_field_tag "password", nil, class: "form-control" %>
    </div>
  </div>
  <div class="control-group">
    <%= submit_tag "Login" %>
  <div>
<% end %>
